FROM centos:7

RUN yum -y --setopt=tsflags=nodocs update && \
    yum -y --setopt=tsflags=nodocs install \
        cmake \
        curl \
        gcc \
        gcc-c++ \
        git \
        glew \
        glew-devel \
        libXcursor \
        libXcursor-devel \
        libXi \
        libXi-devel \
        libXinerama \
        libXinerama-devel \
        libXrandr \
        libXrandr-devel \
        make \
        python \
        python-devel \
        python3 \
        python3-devel \
        zlib \
        zlib-devel \
        && \
    yum clean all

WORKDIR /opt/USD

ENV PATH=/opt/USD-inst/bin:${PATH}
ENV PYTHONPATH=/opt/USD-inst/lib/python:${PYTHONPATH}

CMD [ "/bin/bash" ]

